import java.util.Scanner;

public class Perfect {
    public static boolean isPerfect(int num, int i, int sum) {
        if (i > num / 2) {
            return num == sum;
        }

        if (num % i == 0) {
            sum = sum + i;
        }
        return isPerfect(num, i + 1, sum);

    }

    public static void main(String[] args) {

        System.out.println(isPerfect(8128, 1, 0));
    }
}
