import java.util.Scanner;

public class SumOfDigit {

    public static int SumOfDigit(int num, int sum) {
        if (num == 0) {

            return sum;
        }

        sum = sum + (num % 10);

        return SumOfDigit(num / 10, sum);

    }

    public static void main(String[] args) {
        System.out.println(SumOfDigit(15, 0));
    }
}
